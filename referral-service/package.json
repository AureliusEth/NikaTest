{
  "name": "referral-service",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"tests/**/*.ts\"",
    "start": "bash scripts/start-backend.sh",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "restart": "npm run start",
    "lint": "eslint \"{src,apps,libs,test,tests}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --coverageDirectory=tests/coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:unit": "jest tests/unit",
    "test:unit:domain": "jest tests/unit/domain",
    "test:unit:domain:policies": "jest tests/unit/domain/policies",
    "test:unit:domain:services": "jest tests/unit/domain/services",
    "test:unit:domain:values": "jest tests/unit/domain/value-objects",
    "test:unit:app": "jest tests/unit/application",
    "test:unit:infra": "jest tests/unit/infrastructure",
    "test:integration": "jest tests/integration",
    "test:integration:claims": "jest tests/integration/claims",
    "test:integration:referrals": "jest tests/integration/referrals",
    "test:integration:merkle": "jest tests/integration/merkle",
    "test:integration:blockchain": "jest tests/integration/blockchain",
    "test:integration:repos": "jest tests/integration/repositories",
    "test:contracts": "npm run test:contracts:evm && npm run test:contracts:svm",
    "test:contracts:evm": "cd ../contracts/evm && forge test -vvv",
    "test:contracts:svm": "cd ../contracts/svm/nika-treasury && anchor test --skip-local-validator",
    "test:e2e": "jest tests/e2e --runInBand",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:all:verbose": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:e2e-full": "ts-node scripts/test-e2e.ts",
    "test:e2e-live": "ts-node scripts/test-e2e-live-contracts.ts",
    "test:e2e-phase1-referrals": "ts-node scripts/test-e2e-phase1-referrals.ts",
    "test:e2e-phase1-commissions": "ts-node scripts/test-e2e-phase1-commissions.ts",
    "test:e2e-phase1-merkle-claims": "ts-node scripts/test-e2e-phase1-merkle-claims.ts",
    "test:e2e-phase2-contracts": "ts-node scripts/test-e2e-phase2-contracts.ts",
    "test:e2e-phase3-edge-cases": "ts-node scripts/test-e2e-phase3-edge-cases.ts",
    "test:e2e-all-phases": "npm run test:e2e-phase1-referrals && npm run test:e2e-phase1-commissions && npm run test:e2e-phase1-merkle-claims && npm run test:e2e-phase2-contracts && npm run test:e2e-phase3-edge-cases",
    "prisma:generate": "prisma generate && node scripts/post-prisma-generate.js",
    "mock-trade-flow": "ts-node scripts/mock-trade-flow.ts",
    "mock-comprehensive": "ts-node scripts/mock-comprehensive-trades.ts",
    "generate-trades": "ts-node scripts/generate-trades.ts",
    "update-cashback": "ts-node scripts/update-cashback-rates.ts"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^4.1.0",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.18.0",
    "@solana/web3.js": "^1.95.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "ethers": "^6.13.0",
    "jose": "^6.1.0",
    "merkletreejs": "^0.6.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "prisma": "^6.18.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s",
      "!src/**/*.spec.ts",
      "!src/main.ts"
    ],
    "coverageDirectory": "tests/coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
