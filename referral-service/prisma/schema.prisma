generator client {
  provider = "prisma-client"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  referralCode    String?  @unique
  feeCashbackRate Decimal  @db.Decimal(5, 4) @default(0)
  createdAt       DateTime @default(now())
}

model ReferralLink {
  referrerId String
  refereeId  String   @unique
  level      Int
  createdAt  DateTime @default(now())

  @@id([referrerId, refereeId])
  @@index([referrerId, level])
}

model Trade {
  id        String   @id @default(cuid())
  userId    String
  feeAmount Decimal  @db.Decimal(18, 8)
  chain     String   @default("EVM") // EVM (Arbitrum) or SVM (Solana)
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
  @@index([chain, createdAt])
}

model CommissionLedgerEntry {
  id            String   @id @default(cuid())
  beneficiaryId String
  sourceTradeId String
  level         Int      // -1 = treasury; 0 = cashback; 1-3 = upline levels
  rate          Decimal  @db.Decimal(5, 4)
  amount        Decimal  @db.Decimal(18, 8)
  token         String   @default("XP")
  destination   String   @default("claimable") // treasury or claimable
  createdAt     DateTime @default(now())

  @@unique([beneficiaryId, sourceTradeId, level])
  @@index([beneficiaryId, createdAt])
  @@index([destination, token])
}

model IdempotencyKey {
  key       String   @id
  createdAt DateTime @default(now())
}

model MerkleRoot {
  id        String   @id @default(cuid())
  chain     String   // EVM or SVM
  token     String   // XP, USDC, etc.
  root      String   // The merkle root hash
  version   Int      // Incrementing version number
  leafCount Int      // Number of leaves in the tree
  createdAt DateTime @default(now())
  
  @@unique([chain, token, version])
  @@index([chain, token, createdAt])
}

model TreasuryAccount {
  id        String   @id @default(cuid())
  chain     String   // EVM or SVM
  token     String   // XP, USDC, etc.
  address   String   // Treasury wallet address
  balance   Decimal  @db.Decimal(18, 8) @default(0) // Total XP owed to treasury
  claimed   Decimal  @db.Decimal(18, 8) @default(0) // Amount already transferred
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([chain, token, address])
  @@index([chain, token])
}

model ClaimRecord {
  id            String   @id @default(cuid())
  userId        String   // User who claimed
  chain         String   // EVM or SVM
  token         String   // XP, USDC, etc.
  amount        Decimal  @db.Decimal(18, 8)
  merkleVersion Int      // Version of merkle root used
  txHash        String?  // Transaction hash
  claimedAt     DateTime @default(now())
  
  @@unique([userId, chain, token, merkleVersion])
  @@index([userId, chain, token])
  @@index([chain, token, claimedAt])
}
